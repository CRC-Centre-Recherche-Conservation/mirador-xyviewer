{
  "name": "mirador-xyviewer",
  "version": "1.0.0",
  "description": "Mirador 4 plugin for scientific IIIF annotations with spectra visualization",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:demo": "vite --config demo/vite.config.ts",
    "build:demo": "vite build --config demo/vite.config.ts --outDir ../demo-dist",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@mui/material": "^7.0.0",
    "mirador": "^4.0.0",
    "plotly.js": "^2.0.0 || ^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-plotly.js": "^2.6.0",
    "react-redux": "^8.0.0 || ^9.0.0"
  },
  "dependencies": {
    "mirador-image-tools": "^1.0.0",
    "papaparse": "^5.4.1",
    "react-i18next": "^15.4.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^7.0.0",
    "@mui/material": "^7.0.0",
    "@redux-devtools/extension": "^3.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.10.0",
    "@types/openseadragon": "^5.0.1",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-plotly.js": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "mirador": "^4.0.0",
    "plotly.js": "^3.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-plotly.js": "^2.6.0",
    "react-redux": "^9.1.0",
    "redux": "^5.0.0",
    "semantic-release": "^24.2.3",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CRC-Centre-Recherche-Conservation/mirador-xyviewer.git"
  },
  "keywords": [
    "mirador",
    "iiif",
    "plugin",
    "annotations",
    "spectra",
    "plotly",
    "scientific",
    "xrf",
    "raman",
    "spectroscopy"
  ],
  "author": "Centre de la Recherche sur la Conservation (CRC) - Maxime Humeau",
  "license": "Apache-2.0",
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      ["@semantic-release/git", {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }]
    ]
  }
}
